<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/subject"
        android:textSize="22sp"
        android:layout_margin="5dp"
        android:text="subject"
        android:layout_centerHorizontal="true"
        />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Message"
            android:gravity="left"
            android:id="@+id/message"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linspin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin2"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linspin"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <RadioGroup
            android:id="@+id/choiceRadioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/feedback1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feedback1"
                />


            <RadioButton
                android:id="@+id/feedback2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feedback2"

                />

        </RadioGroup>



        </LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin3"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rect_text_edit_border"
            android:ems="10"
            android:hint="Comment"
            android:inputType="textMultiLine"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|top"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/lin5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin4"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/caption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/android:list"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rect_text_edit_border"
            android:text="Submit" />

        <Button
            android:id="@+id/caption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/android:list"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rect_text_edit_border"
            android:text="Cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin5"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">



        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image"
            android:layout_below="@+id/lin1"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>

        </LinearLayout>



</RelativeLayout>